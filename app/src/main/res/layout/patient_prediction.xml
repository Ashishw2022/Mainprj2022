<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xmnls="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmnls:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="218dp"
        android:padding="16dp">

        <!--        <TextView-->
        <!--            android:id="@+id/token"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="4dp"-->
        <!--            android:gravity="center"-->
        <!--            android:text="Phone"-->
        <!--            android:textColor="@color/teal_700"-->
        <!--            android:textSize="15dp" />-->

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/teal_700"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/sym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text="symptoms"
            android:textColor="@color/teal_700"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sym"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="-2dp"
            android:gravity="center"
            android:text="Email"
            android:textColor="@color/teal_700"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/appid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="19dp"
            android:gravity="left"
            android:text="Approval Id"
            android:textColor="@color/teal_700"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/rmks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appid"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="17dp"
            android:gravity="left"
            android:text="Remarks"
            android:textColor="@color/teal_700"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/predicte_Disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rmks"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/red"
            xmnls:text="predicte_Disease" />
        / android:layout_toBottom="@+id/appid"
        android:gravity="left"
        android:text="predicted Disease"
        android:textColor="@color/teal_700"
        android:textSize="15dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>